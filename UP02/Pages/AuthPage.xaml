<Page x:Class="UP02.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP02.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0"
            >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label
                Content="Логин"
                Grid.Column="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Height="38"
                Width="100"
                HorizontalContentAlignment="Right"
                Margin="0,0,0,40"
                />

            <Label
                Content="Пароль"
                Grid.Column="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Height="38"
                Width="100"
                HorizontalContentAlignment="Right"
                Margin="0,40,0,0"
                />

            <TextBox
                x:Name="tbLogin"
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Height="38"
                Width="100"
                HorizontalContentAlignment="Right"
                Margin="0,0,0,40"
                />  

            <PasswordBox
                x:Name="pbPassword"
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Height="38"
                Width="100"
                HorizontalContentAlignment="Right"
                Margin="0,40,0,0"
                />
        </Grid>

        <Button
            Grid.Row="1"
            Width="100"
            Height="38"
            Content="Авторизоваться"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Click="Button_Click"
            />

        <Button
            Grid.Row="1"
            Width="100"
            Height="38"
            Content="Назад"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="Button_Click_1"
            />
    </Grid>
</Page>
