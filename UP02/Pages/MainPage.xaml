<Page x:Class="UP02.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP02.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="900"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0" 
            >

            <Label
                Content="Город"
                Width="100"
                HorizontalAlignment="Left"
                HorizontalContentAlignment="Right"
                VerticalAlignment="Top"
                Height="40"
                />

            <ComboBox
                x:Name="cbCity"
                Width="100"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="40"
                Margin="120,20,20,20"
                SelectionChanged="cbCity_SelectionChanged"
                DisplayMemberPath="CityName"
                />

            <Label
                Content="Категория"
                Width="100"
                HorizontalAlignment="Left"
                HorizontalContentAlignment="Right"
                VerticalAlignment="Top"
                Height="40"
                Margin="20,80,20,20"
                />

            <ComboBox
                x:Name="cbCategory"
                Width="100"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="40"
                Margin="120,80,20,20"
                SelectionChanged="cbCategory_SelectionChanged"
                DisplayMemberPath="CategoryName"
                />

            <Label
                Content="Тип"
                Width="100"
                HorizontalAlignment="Left"
                HorizontalContentAlignment="Right"
                VerticalAlignment="Top"
                Height="40"
                Margin="240,20,20,20"
                />

            <ComboBox
                x:Name="cbType"
                Width="100"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="40"
                Margin="360,20,20,20"
                SelectionChanged="cbType_SelectionChanged"
                DisplayMemberPath="TypeName"
                />
            
            <Label
                Content="Статус"
                Width="100"
                HorizontalAlignment="Left"
                HorizontalContentAlignment="Right"
                VerticalAlignment="Top"
                Height="40"
                Margin="240,80,20,20"
                />

            <ComboBox
                x:Name="cbStatus"
                Width="100"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="40"
                Margin="360,80,20,20"
                SelectionChanged="cbStatus_SelectionChanged"
                DisplayMemberPath="StatusName"
                />

            <Label
                Content="Название"
                Width="100"
                HorizontalAlignment="Left"
                HorizontalContentAlignment="Right"
                VerticalAlignment="Top"
                Height="40"
                Margin="480,20,20,20"
                />

            <TextBox
                x:Name="tbName"
                Width="200"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="40"
                Margin="600,20,20,20"
                TextChanged="tbName_TextChanged"
                />

            <Button
                x:Name="btnClear"
                Content="Очистить фильтры"
                Width="100"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="40"
                Margin="480,80,20,20"
                Click="btnClear_Click"
                />

            <Button
                x:Name="btnAuth"
                Content="Авторизоваться"
                Width="100"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="40"
                Margin="600,80,20,20"
                Click="btnAuth_Click"
                />

            <Button
                x:Name="btnMyAdds"
                Content="Мои объявления"
                IsEnabled="False"
                Width="100"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="40"
                Margin="720,80,20,20"
                Click="btnMyAdds_Click"
                />
        </Grid>

        <ListView
            Grid.Row="1"
            x:Name="lvAdds"
            MinWidth="350"
            MaxWidth="2000"
            >
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Width="{Binding ElementName=lvAdds, Path=ActualWidth}"
                        />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="200*"/>
                        </Grid.RowDefinitions>

                        <Label
                            Grid.Row="0"
                            Content="{Binding AdName}"
                            Padding="0"
                            HorizontalAlignment="Center"
                            Style="{StaticResource lblLarge}"
                            />

                        <Grid
                            Grid.Row="1"
                            >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition MinWidth="200"/>
                                <ColumnDefinition MinWidth="150"/>
                            </Grid.ColumnDefinitions>

                            <Image
                                Grid.Column="0"
                                Width="200"
                                Height="200" 
                                Stretch="Uniform"
                                HorizontalAlignment="Center"
                                >
                                <Image.Source>
                                    <Binding Path="Photo">
                                        <Binding.TargetNullValue>
                                            <ImageSource>/Sources/add.png</ImageSource>
                                        </Binding.TargetNullValue>
                                    </Binding>
                                </Image.Source>
                            </Image>

                            <Grid 
                                Grid.Column="1"
                                >
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                            
                                <Label
                                    Grid.Row="0"
                                    Content="{Binding City1.CityName}"
                                    Padding="0"
                                    />

                                <Label
                                    Grid.Row="1"
                                    Content="{Binding Category1.CategoryName}"
                                    Padding="0"
                                    />

                                <Label
                                    Grid.Row="2"
                                    Content="{Binding AdType1.TypeName}"
                                    Padding="0"
                                    />

                                <Label
                                    Grid.Row="4"
                                    Content="{Binding Price}"
                                    Padding="0"
                                    />
                            </Grid>

                        </Grid>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            
        </ListView>
    </Grid>
</Page>
