<Page x:Class="UP02.Pages.EditAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP02.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="EditAdd">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0"
            >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label
                Content="Статус"
                Grid.Column="0"
                Height="38"
                Width="100"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                />
            
            <Label
                Content="Город"
                Grid.Column="0"
                Height="38"
                Width="100"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Margin="20,60,20,20"
                />

            <Label
                Content="Категория"
                Grid.Column="0"
                Height="38"
                Width="100"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Margin="20,100,20,20"
                />

            <Label
                Content="Тип"
                Grid.Column="0"
                Height="38"
                Width="100"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Margin="20,140,20,20"
                />

            <Label
                Content="Название"
                Grid.Column="0"
                Height="38"
                Width="100"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Margin="20,180,20,20"
                />

            <Label
                Content="Описание"
                Grid.Column="0"
                Height="38"
                Width="100"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Margin="20,220,20,20"
                />

            <Label
                Content="Цена"
                Grid.Column="0"
                Height="38"
                Width="100"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Margin="20,260,20,20"
                />

            <Label
                Content="Фото"
                Grid.Column="0"
                Height="38"
                Width="100"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Margin="20,300,20,20"
                />

            <ComboBox
                x:Name="cbStatus"
                Grid.Column="1"
                Height="38"
                Width="100"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                DisplayMemberPath = "StatusName"
                SelectionChanged="cbStatus_SelectionChanged"
                />

            <ComboBox
                x:Name="cbCity"
                Grid.Column="1"
                Height="38"
                Width="100"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Margin="20,60,20,20"
                DisplayMemberPath = "CityName"
                />

            <ComboBox
                x:Name="cbCategory"
                Grid.Column="1"
                Height="38"
                Width="100"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Margin="20,100,20,20"
                DisplayMemberPath = "CategoryName"
                />

            <ComboBox
                x:Name="cbType"
                Grid.Column="1"
                Height="38"
                Width="100"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Margin="20,140,20,20"
                DisplayMemberPath = "TypeName"
                />

            <TextBox
                x:Name="tbName"
                Grid.Column="1"
                Height="38"
                Width="100"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Margin="20,180,20,20"
                />

            <TextBox
                x:Name="tbDescription"
                Grid.Column="1"
                Height="38"
                Width="100"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Margin="20,220,20,20"
                />

            <TextBox
                x:Name="tbPrice"
                Grid.Column="1"
                Height="38"
                Width="100"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Margin="20,260,20,20"
                />

            <TextBox
                x:Name="tbPhoto"
                Grid.Column="1"
                Height="38"
                Width="100"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Margin="20,300,20,20"
                />
        </Grid>

        <Button
            x:Name="btnDelete"
            Grid.Row="1"
            Content="Удалить"
            Height="38"
            Width="100"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="btnDelete_Click"
            Margin="160,20,20,20"
            />

        <Button
            x:Name="btnBack"
            Grid.Row="1"
            Content="Назад"
            Height="38"
            Width="100"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="btnBack_Click"
            />

        <Button
            x:Name="btnSave"
            Grid.Row="1"
            Content="Сохранить"
            Height="38"
            Width="100"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Click="btnSave_Click"
            />
    </Grid>
</Page>
